    "test": "node test/test.js",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "extism": "^2.0.0-rc13"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "@types/node": "^20.0.0"
  },
  "keywords": ["extism", "webassembly", "plugin"],
