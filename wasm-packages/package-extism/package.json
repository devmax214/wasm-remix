{
  "name": "package-extism",
  "version": "1.0.0",
  "type": "module",
  "description": "Extism WebAssembly extension package",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc && vite build",
    "build:wasm": "./build.sh",
